<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="437dp"
    android:layout_height="437dp"
    android:background="@android:color/transparent"
    android:layout_marginLeft="82dp"
    android:layout_marginTop="132dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/LL_this"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:layout_width="99dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:layout_marginLeft="174dp"
                android:layout_marginTop="58dp"
                android:text="@string/list_dialog_name"
                android:textColor="#333333"
                android:textSize="30sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:layout_marginTop="38dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="35dp"
                android:layout_marginLeft="77dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="left"
                    android:text="@string/list_dialog_id"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:text="2006364535"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="127dp"
                android:layout_height="35dp"
                android:layout_marginLeft="44dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="left"
                    android:text="@string/list_dialog_class_name"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="92dp"
                    android:layout_height="35dp"
                    android:text="05级初一(1)班"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="268dp"
            android:layout_marginLeft="137dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="88dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/cuff" />
            <TextView
                android:layout_width="165dp"
                android:layout_height="18dp"
                android:layout_marginTop="44dp"
                android:text="手环没有正确佩戴到手上"
                android:textColor="#ff3000"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="20dp"
                android:layout_marginTop="72dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/icon_weak" />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:text="基站信号强度:"
                    android:textColor="#333333"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="2dp"
                    android:text="弱"
                    android:textColor="#333333"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/dialog_pre_entry_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cancel"/>

</RelativeLayout>